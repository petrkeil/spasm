C_Stone_norm <- function(m, lst = FALSE, fun = FALSE)
{
D <- vegan::designdist(m,
method = "b*c",
abcd = TRUE,
terms = "binary")
# n <- ncol(m) # optional standardization by number of sites
# N <- (n*(n-1))/2
S <- nrow(m)
P <- S*(S-1)/2
D <- D/P
if(lst) D <- dist2list(D)
do.fun <- is.function(fun)
if(do.fun) D <- fun(D)
return(D)
}
